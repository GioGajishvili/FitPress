<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f4f4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warm Up"
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20X"
            android:fontFamily="@font/righteous_regular"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/workout_push_ups4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cobras exercises"
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12X"
            android:fontFamily="@font/righteous_regular"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/workout_push_ups1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wide arm push up"
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12X"
            android:fontFamily="@font/righteous_regular"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/workout_push_ups3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T Plank"
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12X"
            android:fontFamily="@font/righteous_regular"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/workout_push_ups5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staggered push ups"
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12X"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/righteous_regular"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginBottom="70dp"
            app:lottie_rawRes="@raw/workout_push_ups2"
            />



    </LinearLayout>

</androidx.core.widget.NestedScrollView>